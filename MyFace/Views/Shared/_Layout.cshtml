<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyFace</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/myStyles.css" />
</head>
<body> 
    <header>
        <nav class="nav-bar">
            
        <div>
            <a class = "nav-link" asp-controller="Home" asp-action="Index">MyFace</a>
            <a class = "nav-link" asp-controller="Posts" asp-action="PostsPage">Posts</a>
            <a class = "nav-link" asp-controller="Users" asp-action="UsersPage">Users</a>
            <a class = "nav-link" asp-controller="Posts" asp-action="Create Post">+ New Post</a>
            <a class = "nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <img src="/images/corndel-logo.png" alt="Corndel logo" class="footer-corndel-logo"/> 
        <img src="/images/softwire-logo.png" alt="Softwire logo" class="footer-softwire-logo"/> 
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
